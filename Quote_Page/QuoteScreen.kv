<QuoteScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20 # A bit more padding for the quote
        Label:
            text: "Quote of the Day"
            font_size: '26sp'
            color: app.theme_colors[1]
            size_hint_y: 0.25
        Label:
            text: root.quote_text
            font_size: '19sp'
            # These properties ensure the text wraps correctly within the label's width
            text_size: self.width, None
            color: app.theme_colors[1]
            halign: 'center'
            valign: 'center'
