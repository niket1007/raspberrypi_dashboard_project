# The root widget is now a BoxLayout
BoxLayout:
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.theme_colors[0] # Dark background color
        Rectangle:
            pos: self.pos
            size: self.size

    DashboardManager:
        id: screen_manager # Give the manager an id