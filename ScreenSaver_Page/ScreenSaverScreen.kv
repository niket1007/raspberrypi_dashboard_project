<ScreenSaverScreen>:
    FloatLayout:
        Image:
            source: "ScreenSaver_Page/GIF/river-anime.gif"
            # --- Animation properties ---
            anim_delay: 0.1          # Play animation (e.g., 10 frames per second)
            anim_loop: 0             # Loop forever (0 for infinite loop)
            
            # --- Sizing properties to fill the screen ---
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
